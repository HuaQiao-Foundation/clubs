    "globals": "^16.4.0",
    "postcss": "^8.5.6",
    "sharp": "^0.34.4",
    "svgo": "^4.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.43.0",
