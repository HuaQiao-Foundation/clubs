# Enable pnpm shamefully-hoist for better compatibility with some tools
# that expect dependencies to be hoisted to the root node_modules
shamefully-hoist=false

# Use a strict peer dependencies resolution
strict-peer-dependencies=false

# Auto-install peers (recommended for monorepos)
auto-install-peers=true

# Enable lockfile to ensure reproducible installs
lockfile=true

# Use hard links for faster installs and less disk space
store-dir=~/.pnpm-store
